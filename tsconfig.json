{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
  },
  "includes": ["./src/externals.d.ts"],
  "include": ["src","src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["./node_modules"]
}
